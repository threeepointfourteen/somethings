                ><br><br>
                
            </p>
            <script>
                function wrapWords(node) {
                    node.childNodes.forEach((child) => {
                        if (child.nodeType === Node.TEXT_NODE) {
                            const palabras = child.textContent.split(/(\s+)/);
                            const fragment = document.createDocumentFragment();
                            palabras.forEach((palabra) => {
                                if (palabra.trim() === "") {
                                    fragment.appendChild(
                                        document.createTextNode(palabra),
                                    );
                                } else {
                                    const span = document.createElement("span");
                                    span.className =
                                        "hover:text-pink-400 hover:scale-95 transition-transform duration-200 hover:cursor-crosshair";
                                    span.textContent = palabra;
                                    fragment.appendChild(span);
                                }
                            });
                            child.replaceWith(fragment);
                        } else if (child.nodeType === Node.ELEMENT_NODE) {
                            wrapWords(child);
                        }
                    });
                }

                const parrafo = document.getElementById("mi-parrafo");
                wrapWords(parrafo);
            </script>
